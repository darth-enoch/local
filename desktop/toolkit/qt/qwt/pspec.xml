        </BuildDependencies>
        <Patches>
            <Patch level="1">build.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>qwt</Name>
        <RuntimeDependencies>
            <Dependency>qt</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib</Path>
        </Files>
    </Package>

    <Package>
        <Name>qwt-qt-designer</Name>

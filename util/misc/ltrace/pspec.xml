            <Dependency>elfutils</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">x86unification.patch</Patch>
            <Patch level="1">0.4-parallel-make.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>ltrace</Name>
        <RuntimeDependencies>
            <Dependency>elfutils</Dependency>
        </RuntimeDependencies>

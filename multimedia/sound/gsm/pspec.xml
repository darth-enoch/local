    <Package>
        <Name>gsm-32bit</Name>
        <PartOf>emul32</PartOf>
        <Summary>32-bit shared libraries for gsm</Summary>
        <BuildType>emul32</BuildType>
        <RuntimeDependencies>
            <Dependency release="current">gsm</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib32</Path>
        </Files>

    <Package>
        <Name>plotutils</Name>
        <RuntimeDependencies>
            <Dependency>libXaw</Dependency>
            <Dependency>libXext</Dependency>
            <Dependency>libXt</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>

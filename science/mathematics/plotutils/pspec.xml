            <Dependency>libXaw-devel</Dependency>
            <Dependency>libXext-devel</Dependency>
            <Dependency>libXt-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>plvector_init.patch</Patch>
            <Patch level="1">plotutils-2.5.1-rangecheck.patch</Patch>

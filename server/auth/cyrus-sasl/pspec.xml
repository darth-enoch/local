            <Dependency release="current">cyrus-sasl</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="doc">/usr/share/doc/cyrus-sasl/*.txt</Path>
            <Path fileType="man">/usr/share/man/man3</Path>

        <Homepage>http://www.x.org/</Homepage>
        <Packager>
            <Name>Pardus ANKA Admins</Name>
            <Email>pisiciftligi@pardus-linux.org</Email>
        </Packager>
        <License>MIT</License>
        <IsA>library</IsA>
        <Summary>X.Org Xv library</Summary>

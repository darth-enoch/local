        <Update release="1">
            <Date>2012-11-15</Date>
            <Version>11</Version>
            <Comment>First release</Comment>
            <Name>Marcin Bojara</Name>
            <Email>marcin.bojara@gmail.com</Email>
        </Update>
    </History>
</PISI>
